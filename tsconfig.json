{
  "extends": "@salesforce/dev-config/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "importHelpers": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"]
}
